Sub ClearDataWithWarning()
    Dim ws As Worksheet
    Dim lastRow As Long
    Dim deleteCount As Long
    Dim response As VbMsgBoxResult
    
    ' Set the worksheet (change "AssignedData" to your sheet name)
    Set ws = ThisWorkbook.Sheets("AssignedData")
    
    ' Find the last row of data in column A (adjust if needed)
    lastRow = ws.Cells(ws.Rows.Count, "A").End(xlUp).Row
    
    ' Ask for confirmation to clear the data
    response = MsgBox("Are you sure you want to clear the data? This action cannot be undone.", vbYesNo + vbExclamation, "Clear Data Confirmation")
    
    ' If the user selects "Yes", proceed with clearing the data
    If response = vbYes Then
        ' Clear the data (Assuming data starts from row 2, adjust as per your layout)
        ws.Range("A2:L" & lastRow).ClearContents ' Adjust the range if needed
        
        ' Calculate the number of rows cleared
        deleteCount = lastRow - 1 ' Subtract 1 for the header row
        
        ' Display the number of rows cleared
        MsgBox deleteCount & " rows of data have been cleared.", vbInformation, "Data Cleared"
    Else
        ' If the user selects "No", cancel the operation
        MsgBox "Data clearing operation was canceled.", vbInformation, "Operation Canceled"
    End If
End Sub
